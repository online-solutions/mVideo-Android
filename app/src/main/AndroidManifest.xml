<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="plus.studio.mvideo"
    android:installLocation="preferExternal" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="plus.studio.mvideo.utils.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyMaterialTheme" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.VideoDetailActivity"
            android:label="@string/title_activity_video_detail" >
        </activity>
        <activity
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:name=".activities.VideoFullScreenActivity"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_video_full_screen" >
        </activity>
    </application>

</manifest>
